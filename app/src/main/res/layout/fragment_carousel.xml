<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/base_purple"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp"
        app:contentPadding="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/infoCard">
            <ImageView
                android:id="@+id/infoMovieImg"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/moovster"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/letter_white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/infoMovieImg"
                android:layout_toEndOf="@id/infoMovieImg"
                android:layout_alignParentTop="true"
               ></TextView>
</LinearLayout>
            <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                android:id="@+id/recyclerCarousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/infoCard"
                ></com.jackandphantom.carouselrecyclerview.CarouselRecyclerview>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>